{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",

  

    "outDir": "./dist/src",
"rootDir": "./src" ,

    "declaration": true,
    "removeComments": true,
    "sourceMap": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,

    "incremental": true,
    "skipLibCheck": true,

    "strict": false,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
